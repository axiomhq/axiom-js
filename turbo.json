{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "AXIOM_TOKEN",
    "AXIOM_URL",
    "AXIOM_ORG_ID",
    "NEXT_PUBLIC_AXIOM_TOKEN",
    "NEXT_PUBLIC_AXIOM_URL",
    "NEXT_PUBLIC_AXIOM_ORG_ID",
    "AXIOM_DATASET_SUFFIX"
  ],
  "tasks": {
    "lint": {},
    "format": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:cjs": {
      "dependsOn": ["^build:cjs"],
      "outputs": ["dist/cjs/**"]
    },
    "test": {
      "dependsOn": ["^build", "^build:cjs"]
    },
    "integration": {
      "dependsOn": ["^build", "^build:cjs"]
    },
    "e2e": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "nextjs-app#build": {
      "dependsOn": ["^build", "^build:cjs"],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
