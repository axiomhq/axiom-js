{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "lint": {},
    "format": {},

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:cjs": {
      "dependsOn": ["^build:cjs"],
      "outputs": ["dist/cjs/**"]
    },
    "test": {
      "dependsOn": ["^build", "^build:cjs"]
    },
    "integration": {
      "env": [
        "AXIOM_TOKEN",
        "AXIOM_URL",
        "AXIOM_ORG_ID",
        "AXIOM_EDGE",
        "AXIOM_EDGE_URL",
        "AXIOM_EDGE_TOKEN",
        "AXIOM_EDGE_DATASET_REGION",
        "AXIOM_DATASET_SUFFIX"
      ],
      "dependsOn": ["^build", "^build:cjs"]
    },
    "e2e": {
      "dependsOn": ["^build"],
      "env": [
        "AXIOM_TOKEN",
        "AXIOM_URL",
        "AXIOM_ORG_ID",
        "NEXT_PUBLIC_AXIOM_TOKEN",
        "NEXT_PUBLIC_AXIOM_URL",
        "NEXT_PUBLIC_AXIOM_ORG_ID",
        "AXIOM_DATASET_SUFFIX",
        "TESTING_TARGET_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "nextjs-app#build": {
      "dependsOn": ["^build", "^build:cjs"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "AXIOM_TOKEN",
        "AXIOM_URL",
        "AXIOM_ORG_ID",
        "NEXT_PUBLIC_AXIOM_TOKEN",
        "NEXT_PUBLIC_AXIOM_URL",
        "NEXT_PUBLIC_AXIOM_ORG_ID"
      ]
    }
  }
}
